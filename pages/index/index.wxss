/**index.wxss**/

.block {
  border-radius: 15rpx;
  margin: 25rpx;
  height: 180rpx;
}

.blockTitle {
  color: #fff;
  width: 300rpx;
  font-size: 34rpx;
  padding: 20rpx 20rpx 0 30rpx;
}

.blockType {
  color: #fff;
  font-size: 19rpx;
  text-align: center;
  background: #fff;
  background-color: rgba(0, 0, 0, 0.2);
  margin-top: 6rpx;
  margin-left: 30rpx;
  width: 65rpx;
  border-radius: 5rpx;
}

.blockLeft {
  float: left;
}

.blockRight {
  float: right;
}

.blockTime {
  color: #fff;
  opacity: 0.4;
  font-size: 22rpx;
  padding-left: 30rpx;
  padding-top: 40rpx;
  width: 300rpx;
}

.blockButton {
  color: #fff;
  font-size: 19rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-right: 35rpx;
  width: 100rpx;
  border-radius: 15rpx;
  border-style: solid;
  border-width: 1rpx;
  height: 29rpx;
}

.blockDaysTitle {
  float: right;
  color: #fff;
  opacity: 0.4;
  font-size: 19rpx;
  padding-right: 16rpx;
  padding-top: 10rpx;
  width: 100rpx;
}

.blockDays {
  color: #fff;
  font-size: 55rpx;
  padding-right: 35rpx;
}

.blue {
  background: #03a9f4;
}

.red {
  background: #e84e40;
}
