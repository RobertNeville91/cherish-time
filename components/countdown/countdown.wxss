/* components/countdown/countdown.wxss */
.box {
  position: relative;
  width: 150px;
  height: 180px;
  margin: 50px auto;
  transform: perspective(500px) rotateX(0deg);
  transform-style: preserve-3d;
}

.top {
  width: 150px;
  height: 180px;
  border-radius: 10px 10px 0 0;
  transform: rotateX(-14deg);
}

.bottom {
  position: absolute;
  bottom: 0;
  width: 150px;
  height: 100px;
  border-radius: 0 0 10px 10px;
}

.circle {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.circle>span {
  display: inline-block;
  position: absolute;
  top: 50%;
  margin-top: -5px;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: #fff;
}

.circle>span:nth-of-type(1) {
  left: -4px;
}

.circle>span:nth-of-type(2) {
  right: -4px;
}

.font {
  position: absolute;
  top: 50%;
  width: 100%;
  height: 100%;
  margin-top: -45px;
  font-size: 80px;
  font-family: farrington;
  color: #fff;
  text-align: center;
}

.font>view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 45px;
  font-size: 80px;
  font-family: farrington;
  color: #e5e5e5;
  overflow: hidden;
  text-align: center;
}

.footwall {
  width: 250px;
  height: 400px;
  background: linear-gradient(#fff, #cfd9df);
  margin-top: -120px;
  margin-left: -56px;
  border-radius: 18px;
}
